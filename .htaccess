RewriteEngine On

# ===============================
# إجبار https + www
# ===============================
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]

# ===============================
# إخفاء index أو index.html من الرابط
# ===============================
RewriteCond %{THE_REQUEST} \s/+(index(\.html)?) [NC]
RewriteRule ^index(\.html)?$ / [R=301,L]

# ===============================
# إخفاء .html من الروابط
# ===============================
# لو المستخدم كتب الرابط مع .html نحوله للنظيف
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# السماح بفتح الملفات .html لما يطلب الرابط النظيف
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]

# ===============================
# تفعيل ضغط Gzip
# ===============================
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/javascript application/json
</IfModule>

# ===============================
# تفعيل الكاش للصور و CSS/JS
# ===============================
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 6 months"
  ExpiresByType image/jpeg "access plus 6 months"
  ExpiresByType image/png "access plus 6 months"
  ExpiresByType image/gif "access plus 6 months"
  ExpiresByType image/svg+xml "access plus 6 months"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/x-javascript "access plus 1 month"
</IfModule>

# ===============================
# حماية ملفات حساسة
# ===============================
<FilesMatch "\.(htaccess|env|git|ini|log|sh)$">
  Order Allow,Deny
  Deny from all
</FilesMatch>

# ===============================
# صفحة خطأ 404 مخصصة
# ===============================
ErrorDocument 404 /404.html
